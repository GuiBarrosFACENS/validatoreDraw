package com.santander.mpa.app.processor;

import com.santander.mpa.domain.usecase.PlardDatabaseControlProcessor;
import com.santander.mpa.infra.dto.PlardMetadataDTO;
import com.santander.mpa.infra.repository.PlardMetadataRepository;
import lombok.AllArgsConstructor;
import org.springframework.stereotype.Service;

@Service
@AllArgsConstructor
public class PlardDatabaseControlProcessorImpl implements PlardDatabaseControlProcessor {

  private PlardMetadataRepository plardMetadataRepository;

  public boolean verifyPlardItemInDB(PlardMetadataDTO plardMetadataDto) {
    return !plardMetadataRepository.findById(plardMetadataDto.getIdMetadados()).isEmpty();
  }

  public void saveInDatabase(PlardMetadataDTO plardMetadataDto) {
    plardMetadataRepository.save(plardMetadataDto);
  }
}
